                        mode='lines+markers',
                        name='Reference Mean',
                        error_y=dict(
                        type='data',
                        symmetric=False,
                        array=[ma - rm for ma, rm in zip(ref_max, ref_means)],
                        arrayminus=[rm - mi for rm, mi in zip(ref_means, ref_min)]
