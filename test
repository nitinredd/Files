def predictive_optimal_combinations_advanced(ref_df, test_df, regulation, 
                                             window_min, window_max, diff_threshold=None,
                                             interp_method='gpr', points_per_stratum=None):
    """
    Hybrid stratification to yield a single best candidate combination (with highest f2)
    based on predicted dissolution curves. The selection is done in three dissolution strata
    (using the reference predictions):
    
      • 0-30% stratum: exactly 2 points (e.g. expected near 3 and 9 min)
      • 30-60% stratum: exactly 2 points (e.g. near 15 and 18 min)
      • 60-90% stratum: exactly 2 points (e.g. near 24 and 30 min), with at least one 
         candidate crossing 80% for both reference and test.
         
    For FDA, an extra candidate is appended—the first time after the last candidate
    where both predictions are ≥85% (resulting in 7 points total).
    
    Only time points from a grid of 3- and 5-minute increments are considered.
    The function runs multiple iterations (e.g. 100) and returns the combination with the best f2.
    If no iteration meets the criteria, a fallback using all valid times is returned.
    """
    import numpy as np
    import random
    from sklearn.gaussian_process import GaussianProcessRegressor
    from sklearn.gaussian_process.kernels import ConstantKernel, RBF, WhiteKernel
    import math

    # --- 1. Define valid time grid (only 3- and 5-minute increments) ---
    valid_times = np.sort(np.unique(np.concatenate([
        np.arange(window_min, window_max+1, 3),
        np.arange(window_min, window_max+1, 5)
    ])))
    
    # --- 2. Setup interpolation models (GPR) ---
    kernel = ConstantKernel(1.0) * RBF(length_scale=10.0) + WhiteKernel()
    ref_model = GaussianProcessRegressor(kernel=kernel, n_restarts_optimizer=5)
    test_model = GaussianProcessRegressor(kernel=kernel, n_restarts_optimizer=5)
    
    # Clean and fit data
    ref_clean = ref_df.dropna()
    test_clean = test_df.dropna()
    ref_model.fit(ref_clean.iloc[:, 0].values.reshape(-1, 1), ref_clean.iloc[:, 1].values)
    test_model.fit(test_clean.iloc[:, 0].values.reshape(-1, 1), test_clean.iloc[:, 1].values)
    
    # --- 3. Prediction function (for both models) ---
    def predict_diss(model, times):
        return model.predict(np.array(times).reshape(-1, 1)).flatten()
    
    # Precompute predictions for the valid times
    all_ref_pred = predict_diss(ref_model, valid_times)
    all_test_pred = predict_diss(test_model, valid_times)
    
    # --- 4. Define dissolution strata based on reference predictions ---
    # Strata are defined by predicted dissolution value ranges.
    strata = {
        "0-30": (0, 30),
        "30-60": (30, 60),
        "60-90": (60, 90)
    }
    required_points = 2  # exactly 2 points per stratum
    
    def eligible_times_for_stratum(stratum_range):
        low, high = stratum_range
        return [t for t, pred in zip(valid_times, all_ref_pred) if low <= pred < high]
    
    # --- 5. Function to compute f2 from candidate times ---
    def compute_f2(candidate):
        ref_vals = predict_diss(ref_model, candidate)
        test_vals = predict_diss(test_model, candidate)
        # Force starting point to 0%
        if candidate[0] == window_min:
            ref_vals[0] = 0.0
            test_vals[0] = 0.0
        diff = test_vals - ref_vals
        return 50 * math.log10(100 / (1 + math.sqrt(np.mean(diff**2))))
    
    best_f2 = -1e9
    best_candidate = None
    best_ref_vals = None
    best_test_vals = None
    iterations = 100  # try 100 random iterations

    for _ in range(iterations):
        candidate = []
        # For each stratum, select exactly 2 random eligible times (if available)
        for key, rng in strata.items():
            eligible = eligible_times_for_stratum(rng)
            if len(eligible) < required_points:
                # Skip this iteration if insufficient eligible times in a stratum.
                candidate = None
                break
            chosen = sorted(random.sample(eligible, required_points))
            candidate.extend(chosen)
        if candidate is None:
            continue
        candidate = sorted(list(set(candidate)))
        
        # Ensure the starting point is included.
        if window_min not in candidate:
            candidate.insert(0, window_min)
        
        # --- 6. Check the 60-90 stratum candidate(s): require at least one has both ref & test >=80%
        # Identify candidate times that came from the 60-90 stratum.
        eligible_60_90 = eligible_times_for_stratum(strata["60-90"])
        cand_60_90 = [t for t in candidate if t in eligible_60_90]
        meets_80 = False
        for t in cand_60_90:
            idx = int(np.where(valid_times == t)[0][0])
            if all_ref_pred[idx] >= 80 and all_test_pred[idx] >= 80:
                meets_80 = True
                break
        if not meets_80:
            # Skip this iteration if no candidate in 60-90 crosses 80%
            continue

        # --- 7. For FDA: Append extra candidate (first time after last candidate with both >=85)
        if regulation == "FDA":
            last_candidate = candidate[-1]
            post_times = [t for t in valid_times if t > last_candidate]
            extra_point = None
            for t in post_times:
                idx = int(np.where(valid_times == t)[0][0])
                if all_ref_pred[idx] >= 85 and all_test_pred[idx] >= 85:
                    extra_point = t
                    break
            if extra_point is None:
                continue  # skip if cannot find the extra FDA point
            if extra_point not in candidate:
                candidate.append(extra_point)
                candidate = sorted(candidate)
        
        # --- 8. Enforce candidate counts: Expect 6 points for normal, 7 for FDA
        expected_count = 6 if regulation != "FDA" else 7
        if len(candidate) != expected_count:
            # Optionally skip iterations that do not yield the expected count.
            continue
        
        # --- 9. Compute f2 for this candidate combination
        f2 = compute_f2(candidate)
        if f2 > best_f2:
            best_f2 = f2
            best_candidate = candidate.copy()
            best_ref_vals = predict_diss(ref_model, candidate)
            best_test_vals = predict_diss(test_model, candidate)
            if best_candidate[0] == window_min:
                best_ref_vals[0] = 0.0
                best_test_vals[0] = 0.0

    # Fallback: if no candidate was found, use all valid times.
    if best_candidate is None:
        best_candidate = [t for t in valid_times if window_min <= t <= window_max]
        best_candidate = sorted(best_candidate)
        best_ref_vals = predict_diss(ref_model, best_candidate)
        best_test_vals = predict_diss(test_model, best_candidate)
        best_f2 = compute_f2(best_candidate)
    
    # --- 10. Regulatory compliance check (assumed defined elsewhere) ---
    compliant, reasons = check_regulatory_compliance(
        best_candidate, regulation,
        dict(zip(best_candidate, best_ref_vals)),
        dict(zip(best_candidate, best_test_vals))
    )
    
    result = {
        'sequence': best_candidate,
        'f2': round(best_f2, 2),
        'compliant': compliant,
        'reasons': reasons,
        'ref_vals': best_ref_vals.tolist(),
        'test_vals': best_test_vals.tolist()
    }
    return [result], [result]
