                        for t, d in zip(seq, ref_diss):
                            print(f"  {t} h: {d:.2f}%")
                        print("\nPredicted Test Dissolution (%):")
                        for t, d in zip(seq, test_diss):
                            print(f"  {t} h: {d:.2f}%")

                        ai_df = pd.DataFrame({
                            "Time Point (h)": seq,
                            "Test Dissolution (%)": test_diss,
                            "Reference Dissolution (%)": ref_diss
                        }).round(2)

