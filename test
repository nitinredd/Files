/* ── Chat Bubble Base ───────────────────────────────────────── */
.bubble {
  display: block;              /* full‐width container for its content */
  max-width: 100%;             /* never exceed container */
  padding: 12px 16px;          /* your existing padding */
  margin: 8px 0;
  border-radius: 20px;
  position: relative;
  background-clip: padding-box; /* ensure rounded corners include bg */
  
  /* wrap long text */
  word-break: break-word;
  overflow-wrap: break-word;
}

/* Bot bubble background */
.bubble.bot {
  background: rgba(255,255,255,0.75);
  margin-right: auto;
}
/* User bubble background */
.bubble.user {
  background: rgba(255,255,255,0.5);
  margin-left: auto;
}

/* Bubble “tails” */
.bubble.bot::after {
  content: '';
  position: absolute;
  top: 50%; left: -8px;
  border: 8px solid transparent;
  border-right-color: rgba(255,255,255,0.75);
  transform: translateY(-50%);
}
.bubble.user::after {
  content: '';
  position: absolute;
  top: 50%; right: -8px;
  border: 8px solid transparent;
  border-left-color: rgba(255,255,255,0.5);
  transform: translateY(-50%);
}

/* ── Markdown Tables ────────────────────────────────────────── */
/* auto‐size tables to content, but never overflow bubble */
.md-table {
  width: auto !important;
  max-width: 100%;
  border-collapse: collapse;
  margin: 8px 0;
}

/* table cells styling */
.md-th, .md-td {
  border: 1px solid #ccc;
  padding: 6px;
  font-size: 0.9em;
  text-align: left;
}

/* ensure table scrolls horizontally if still too wide */
.messages {
  overflow-x: auto;
}

/* ── Ensure bubble encloses tables fully ───────────────────── */
.bubble .md-table {
  display: inline-table;      /* shrink to table width */
}

/* ── Prevent oversize bubbles ───────────────────────────────── */
.messages, .chatbot-widget {
  /* these ensure the overall widget has fixed width */
  width: 360px;               /* or your widget width */
}
.bubble {
  /* never overflow the widget */
  max-width: calc(100% - 32px); /* account for padding/margin */
}

/* ── Text Wrapping ─────────────────────────────────────────── */
.bubble {
  white-space: pre-wrap;      /* preserve line breaks but wrap */
}

/* ── (optional) Scrollbar styling ──────────────────────────── */
.messages::-webkit-scrollbar {
  width: 6px;
}
.messages::-webkit-scrollbar-thumb {
  background: rgba(0,0,0,0.2);
  border-radius: 3px;
}
